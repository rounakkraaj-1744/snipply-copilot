{
  "name": "snipply-copilot",
  "displayName": "Snipply Copilot",
  "description": "AI-powered code completion and assistance using Groq LLM",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "groqAssistant.generateCode",
        "title": "Generate Code",
        "category": "Groq Assistant"
      },
      {
        "command": "groqAssistant.explainCode",
        "title": "Explain Code",
        "category": "Groq Assistant"
      },
      {
        "command": "groqAssistant.refactorCode",
        "title": "Refactor Code",
        "category": "Groq Assistant"
      },
      {
        "command": "groqAssistant.fixCode",
        "title": "Fix Code",
        "category": "Groq Assistant"
      },
      {
        "command": "groqAssistant.toggleInlineCompletion",
        "title": "Toggle Inline Completion",
        "category": "Groq Assistant"
      }
    ],
    "keybindings": [
      {
        "command": "groqAssistant.generateCode",
        "key": "ctrl+shift+g",
        "mac": "cmd+shift+g"
      },
      {
        "command": "groqAssistant.explainCode",
        "key": "ctrl+shift+e",
        "mac": "cmd+shift+e"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "groqAssistant.explainCode",
          "when": "editorHasSelection",
          "group": "groq@1"
        },
        {
          "command": "groqAssistant.refactorCode",
          "when": "editorHasSelection",
          "group": "groq@2"
        },
        {
          "command": "groqAssistant.fixCode",
          "when": "editorHasSelection",
          "group": "groq@3"
        }
      ]
    },
    "configuration": {
      "title": "Groq Code Assistant",
      "properties": {
        "groqAssistant.apiKey": {
          "type": "string",
          "default": "",
          "description": "Groq API Key",
          "markdownDescription": "Your Groq API key. Get one from [Groq Console](https://console.groq.com/)"
        },
        "groqAssistant.model": {
          "type": "string",
          "default": "llama-3.1-70b-versatile",
          "enum": [
            "llama-3.1-70b-versatile",
            "llama-3.1-8b-instant",
            "mixtral-8x7b-32768",
            "gemma2-9b-it"
          ],
          "description": "Groq model to use for code generation"
        },
        "groqAssistant.enableInlineCompletion": {
          "type": "boolean",
          "default": true,
          "description": "Enable inline code completion"
        },
        "groqAssistant.completionDelay": {
          "type": "number",
          "default": 500,
          "description": "Delay in milliseconds before triggering completion"
        },
        "groqAssistant.maxTokens": {
          "type": "number",
          "default": 1000,
          "description": "Maximum tokens for completion"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "24.1.0",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "groq-sdk": "^0.7.0"
  }
}
