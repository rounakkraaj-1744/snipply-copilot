{
  "name": "snipply-copilot",
  "displayName": "Snipply Copilot",
  "description": "AI-powered code completion and assistance using Groq LLM - Your intelligent coding companion",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": ["Other"],
  "activationEvents": ["onStartupFinished"],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "snipplyCopilot.generateCode",
        "title": "Generate Code",
        "category": "Snipply Copilot"
      },
      {
        "command": "snipplyCopilot.explainCode",
        "title": "Explain Code",
        "category": "Snipply Copilot"
      },
      {
        "command": "snipplyCopilot.refactorCode",
        "title": "Refactor Code",
        "category": "Snipply Copilot"
      },
      {
        "command": "snipplyCopilot.fixCode",
        "title": "Fix Code",
        "category": "Snipply Copilot"
      },
      {
        "command": "snipplyCopilot.toggleInlineCompletion",
        "title": "Toggle Inline Completion",
        "category": "Snipply Copilot"
      }
    ],
    "keybindings": [
      {
        "command": "snipplyCopilot.generateCode",
        "key": "ctrl+shift+g",
        "mac": "cmd+shift+g"
      },
      {
        "command": "snipplyCopilot.explainCode",
        "key": "ctrl+shift+e",
        "mac": "cmd+shift+e"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "snipplyCopilot.explainCode",
          "when": "editorHasSelection",
          "group": "snipply@1"
        },
        {
          "command": "snipplyCopilot.refactorCode",
          "when": "editorHasSelection",
          "group": "snipply@2"
        },
        {
          "command": "snipplyCopilot.fixCode",
          "when": "editorHasSelection",
          "group": "snipply@3"
        }
      ]
    },
    "configuration": {
      "title": "Snipply Copilot",
      "properties": {
        "snipplyCopilot.apiKey": {
          "type": "string",
          "default": "",
          "description": "Groq API Key",
          "markdownDescription": "Your Groq API key. Get one from [Groq Console](https://console.groq.com/)"
        },
        "snipplyCopilot.model": {
          "type": "string",
          "default": "llama-3.1-70b-versatile",
          "enum": ["llama-3.1-70b-versatile", "llama-3.1-8b-instant", "mixtral-8x7b-32768", "gemma2-9b-it"],
          "description": "Groq model to use for code generation"
        },
        "snipplyCopilot.enableInlineCompletion": {
          "type": "boolean",
          "default": true,
          "description": "Enable inline code completion"
        },
        "snipplyCopilot.completionDelay": {
          "type": "number",
          "default": 500,
          "description": "Delay in milliseconds before triggering completion"
        },
        "snipplyCopilot.maxTokens": {
          "type": "number",
          "default": 1000,
          "description": "Maximum tokens for completion"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "24.1.0",
    "@types/mocha": "^10.0.1",
    "@types/glob": "^8.1.0",
    "@vscode/test-electron": "^2.3.0",
    "typescript": "^4.9.4",
    "mocha": "^10.2.0",
    "glob": "^8.1.0"
  },
  "dependencies": {
    "groq-sdk": "^0.7.0"
  }
}
